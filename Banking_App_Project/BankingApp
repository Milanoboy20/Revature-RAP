create schema bankApp;


create table bankapp.appUsers  (
	user_ID      SERIAL primary key,
	-- constraint cusIDs foreign key (user_ID) references bankapp.customers(cus_ID), 
	/* constraint empIDs foreign key (user_ID) references bankapp.employees(emp_ID), 
	constraint adminIDs foreign key (user_ID) references bankapp.sysAdmin(admin_ID),
	*/
	
	user_name    VARCHAR(200),
	user_title   VARCHAR(100),
	user_address VARCHAR(200),
	user_email   VARCHAR(100) unique not null,
	user_phone   NUMERIC	
);

insert into appusers values ( default ,'samad', 'Manager', 'woodycrest ave', 'samad@yahoo.com', 9292789621);
insert into appusers values ( default ,'john', 'Developer', 'river ave', 'john@yahoo.com', 123456789);
insert into appusers values ( default ,'bob', 'Customer', 'jerome ave', 'bob@yahoo.com', 800200300);
insert into appusers values ( default ,'mike', 'Customer', ' newport rd', 'mike@yahoo.com', 4555555556);

update appusers set user_title = 'Teller' where appUsers.user_title = 'Telle';

create table bankapp.customers (
	cus_ID INTEGER references bankapp.appUsers(user_ID),
	
	--user_ID INTEGER references bankapp.appUsers(user_ID),
	-- constraint cusID foreign key(cus_ID) references bankapp.appUsers(user_ID),
	
	cus_stateID VARCHAR(100),
	cus_SS      numeric unique not null
);

insert into bankapp.customers values (3, '1234ABC', 1234);
insert into bankapp.customers values (5, '2345ABC', 5678);

-- delete from bankapp.customers where cus_id = 2;


create table bankapp.employees (
	emp_ID INTEGER references bankapp.appUsers(user_ID),
	--constraint empID foreign key(emp_ID) references bankapp.appUsers(user_ID),
	
	emp_title VARCHAR(100),
	emp_level VARCHAR,
	emp_salary NUMERIC
);

insert into employees values ( 2 , 'Developer', 'Level 2', 153000);
insert into employees values ( 2 , 'CS_Agent', 'Level 1', 90000);

create table bankapp.sysAdmin (
	admin_ID     INTEGER references bankapp.appUsers(user_ID),
	--constraint adminID foreign key(admin_ID) references bankapp.appUsers(user_ID),
	
	admin_level  VARCHAR,
	admin_salary NUMERIC
);

insert into sysAdmin values (1, 'Level 3', 1500000);

create table bankapp.login (
	login_ID INTEGER references bankapp.appUsers(user_ID),
	username VARCHAR(100),
	psswd    VARCHAR(100)
);
